{
  "layer": "top",
  "signal": 2,
  "position": "top",
  "reload_style_on_change": true,
  "modules-left": ["custom/notification", "clock", "custom/pacman", "tray", "custom/power"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["temperature", "memory", "cpu", "bluetooth", "custom/volume_spacing", "pulseaudio", "custom/network_spacing", "network", "battery"],

  "custom/volume_spacing": {
    "format": "  ",
    "tooltip": false
  },

  "custom/power": {
    "exec": "~/.config/waybar/scripts/power_mode.sh",
    "interval": 10,
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/power_mode.sh toggle; pkill -SIGRTMIN+9 waybar",
    "signal": 9
  },

  "custom/network_spacing": {
    "format": "  ",
    "tooltip": false
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "active": "ÔÑë",
      "default": "ÔÑë",
      "empty": "ÔÑë"
    },
    "persistent-workspaces": {
      "*": [1, 2, 3, 4, 5]
    }
  },

  "custom/notification": {
    "tooltip": false,
    "format": "Óöê",
    "on-click": "swaync-client -t -sw",
    "escape": true
  },

  "clock": {
    "format": "{:%I:%M:%S %p} ",
    "interval": 1,
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "format": {
        "today": "<span color='#fAfBfC'><b>{}</b></span>"
      }
    },
    "actions": {
      "on-click-right": "shift_down",
      "on-click": "shift_up"
    }
  },

  "network": {
    "format-wifi": "Û∞§•",
    "format-ethernet": "Óºâ",
    "format-disconnected": "Ó¨Å",
    "tooltip-format-disconnected": "Error",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "tooltip-format-ethernet": "{ifname} üñß ",
    "on-click": "kitty nmtui"
  },

  "bluetooth": {
    "format-on": "Û∞ÇØ",
    "format-off": "BT-off",
    "format-disabled": "Û∞Ç≤",
    "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
    "format-alt": "{device_alias} Û∞ÇØ",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
    "on-click-right": "blueman-manager"
  },

  "battery": {
    "interval": 30,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% Û∞ÇÑ",
    "format-plugged": "{capacity}% Û∞ÇÑ Ó¨≠",
    "format-alt": "{time} {icon}",
    "format-icons": [
      "Û∞Åª",
      "Û∞Åº",
      "Û∞Åæ",
      "Û∞ÇÄ",
      "Û∞ÇÇ",
      "Û∞Åπ"
    ]
  },

  "custom/pacman": {
    "format": "Û∞Ö¢ {}",
    "interval": 30,
    "exec": "bash -c 'checkupdates | wc -l'",
    "exec-if": "exit 0",
    "on-click": "kitty sh -c 'yay -Syu; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
    "signal": 8,
    "tooltip": false
  },

  "custom/expand": {
    "format": "ÔÑÑ",
    "tooltip": false
  },

  "custom/endpoint": {
    "format": "|",
    "tooltip": false
  },

  "cpu": {
    "format": "{}% Û∞ª†",
    "tooltip": false
  },

  "memory": {
    "format": "{}% ÓøÖ",
    "tooltip": false
  },

  "temperature": {
    "format": "{}¬∞C Ôãâ",
    "tooltip": false,
    "critical-threshold": 80
  },

  "tray": {
    "icon-size": 14,
    "spacing": 10
  },

  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-muted": "Muted Û∞ñÅ",
    "format-icons": {
      "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
    },
    "on-click": "pavucontrol",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
  }
}

